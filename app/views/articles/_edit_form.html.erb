<h1 class='text-center'>Write your new article</h1>
<div class='row'>
  <div class='col-md-4 offset-4'>
  <%= form_with(model: @article, local:true)  do |f|%>
    <%= f.label :title%><br>
    <%= f.text_field :title, class: 'mb-1 form-control'%><br>
    <%= f.label :text%><br>
    <%= f.text_field :text, class: 'mb-1 form-control'%><br>
    <%= f.label :image%><br>
    <%= f.file_field :image, class: 'mb-1 form-control'%><br>
    <div class = "cat-select-container">
    <%= f.label "Category " %>
  </div>
  <%= check_categories(f, @article, @categories, "Update article")%>
  <%end%>
  </dvi>
</dvi>