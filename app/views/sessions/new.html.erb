<div class= "instructions-login">
   <h2>Log-in to your account</h2>
  <h3>One step closer to enter the freshpages!<h3>
  <p>You only need a username to log-in</p>
</div>

  <%= form_with(url: login_path, local:true) do |f| %>
    <div>
      <%= f.label :name, class: "label"%>
      <%= f.text_field :name, placeholder: "Your username here..." %>
      <%= f.submit "Log in", class: "button is-primary"%>
    </div>
  <% end%>




